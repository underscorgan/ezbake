#!/bin/sh

if [ "$1" = "failed-upgrade" ] || [ "$1" = "remove" ] ; then
  if [ -d '/run/systemd/system' ] ; then
    # Using systemd
    systemctl --no-reload disable <%= project -%>.service > /dev/null 2>&1 || :
    systemctl stop <%= project -%>.service > /dev/null 2>&1 || :
  else
    # Using sysv
    invoke-rc.d <%= project -%> stop || :
  fi
fi
