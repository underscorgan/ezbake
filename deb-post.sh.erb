#!/bin/sh

/opt/puppetlabs/server/apps/<%= real_name -%>/scripts/install.sh postinst_deb

# On upgrade, we should restart the service if it's running
if [ $1 = 'configure' -a -n $2 ] ; then
  if [ -d '/run/systemd/system' ] ; then
    # Using systemd
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl try-restart <%= project %>.service ||:
  else
    # Using sysv
    invoke-rc.d <%= project %> try-restart || :
  fi
fi
